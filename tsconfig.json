{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-native",
    "baseUrl": "./",
    "paths": {
      "~/*": ["./*"],
      "*": ["./*"],
      "@components/*": ["src/components/*"],
      "@screens/*": ["src/screens/*"],
      "@assets/*": ["src/assets/*"],
      "@query/*": ["src/query/*"]
    }
  },
  "include": ["src", "declarations.d.ts"]
}
